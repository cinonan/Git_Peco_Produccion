    <div class="modal fade" id="modalFP" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-purple text-white">
                    <h5 class="modal-title" id="exampleModalLongTitle">Ficha-Producto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="popup-imagen my-2 text-center"><img id="fp-img" src=""></div>
                    <h3 id="category-text" class="popup-titulo color-morado"></h3>
                    <p id="catalogue-text" class="popup-texto-1 color-gris-5"></p>
                    <p id="agreement-text" class="popup-texto-1 color-gris-5 font-weight-bold"></p>
                    <p id="fp-text" class="popup-texto-2 color-gris-4"></p>
                    <p class="popup-texto-1 color-gris-5"><strong>Características:</strong></p>
                    <div class="container" style="overflow: hidden;">
                        <div class="row">
                            <div class="col-md-12 ml-1">
                                <ul id="feature-text" class="popup-lista color-gris-4 row ml-0" style="font-size:0.8rem;"></ul>
                            </div>
                        </div>
                    </div>
                    <p id="published-date-text" class="popup-texto-2 color-gris-5 text-bold mb-0 mt-3"></p>
                </div>
                <div class="modal-footer d-flex">
                    <p id="updated-date-text" class="popup-texto-1 color-gris-5 font-weight-bold mr-auto"></p>
                    <a id="fp-file" href=""  target="_blank">
                        <i class="fas fa-download color-morado" style="color:#43A047;" data-toggle="tooltip"  data-placement="top" title="Especificación técnica"></i>
                    </a>
                    <div id="status-ofertada">
                        <i id="status-ofertada" class="fas fa-check-circle pl-2 status hide" style="color:#43A047;" data-toggle="tooltip" data-placement="top" title="OFERTADA"></i>
                        <span style="color:#43A047;">OFERTADA</span>
                    </div>
                    <div id="status-suspendida">
                        <i class="fas fa-check-circle pl-2 status hide" style="color:#616161;" data-toggle="tooltip" data-placement="top" title="SUSPENDIDA"></i>
                        <span style="color:#616161;">SUSPENDIDA</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

